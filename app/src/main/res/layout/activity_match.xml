<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/matchTextView"
            android:layout_width="289dp"
            android:layout_height="88dp"
            android:gravity="center|center_vertical"
            android:text="Help us find you a counsellor"
            android:textColor="@color/colorPrimaryDark"></TextView>

        <LinearLayout
            android:layout_width="@dimen/radio_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/issue"
                android:textColor="@color/colorPrimaryDark" />

            <RadioGroup
                android:id="@+id/issue"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/grief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grief"
                    android:textColor="@color/colorAccent" />

                <RadioButton
                    android:id="@+id/trauma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trauma"
                    android:textColor="@color/colorAccent" />

                <RadioButton
                    android:id="@+id/anxiety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anxiety"
                    android:textColor="@color/colorAccent" />

                <RadioButton
                    android:id="@+id/general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General"
                    android:textColor="@color/colorAccent" />
            </RadioGroup>

        </LinearLayout>


        <TextView
            android:id="@+id/issueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="@dimen/textWidth"
            android:layout_height="@dimen/textHeight"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Next"
            android:textColor="@color/TextColor" />

    </LinearLayout>

</LinearLayout>